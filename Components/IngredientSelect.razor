@using PupaaS.Client.Models

<MudSelect @bind-SelectedValues:get="Ingredients" 
           @bind-SelectedValues:set="IngredientsChanged" 
           Label="@(Simple? null : "Ingredientes")"
           HelperText="@(Simple ? null : "Seleccione los ingredientes de la lista")"
           MultiSelection="true">
    @foreach (var ingredient in AppParameters.Ingredients)
    {
        <MudSelectItem Value="@ingredient">@ingredient</MudSelectItem>
    }
</MudSelect>

@code
{
    [Parameter] public IEnumerable<string>? Ingredients { get; set; }
    [Parameter] public EventCallback<IEnumerable<string>?> IngredientsChanged { get; set; }
    [Parameter] public bool Simple { get; set; }
}
